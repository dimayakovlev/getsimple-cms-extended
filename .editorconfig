# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,css,html,less,scss,xml,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = 80

[*.php]
indent_style = tab
